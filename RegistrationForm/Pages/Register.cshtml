@page "{email?}"
@using RegistrationForm.Models;
@model RegistrationForm.Pages.RegisterModel
@{
}

<h1>Registrace nového uživatele</h1>

<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.FirstName" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.FirstName" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.LastName" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.LastName" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.BirthDate" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.BirthDate" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.SchoolName" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.SchoolName" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="@Model.RegisterIM.Grade">Ročník</label>
                <select class="form-control" asp-for="@Model.RegisterIM.Grade" asp-items="Html.GetEnumSelectList<RegistrationForm.Models.SchoolGrade>()">
                </select>
                <span asp-validation-for="@Model.RegisterIM.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="@Model.RegisterIM.Day"></label>
                <select class="form-control" asp-for="@Model.RegisterIM.Day" asp-items="@Model.SelectDays">
                    <option value="-1">Není</option>
                </select>
                <span asp-validation-for="@Model.RegisterIM.Day" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.RegisterIM.Aspirant" /> @Html.DisplayNameFor(model => model.RegisterIM.Aspirant)
                </label>
                <span asp-validation-for="@Model.RegisterIM.Aspirant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.Email" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.Email" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterIM.Password" class="control-label"></label>
                <input asp-for="@Model.RegisterIM.Password" class="form-control" />
                <span asp-validation-for="@Model.RegisterIM.Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Vytvořit" class="btn btn-primary" /> <a asp-page="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>
